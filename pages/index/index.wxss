/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 40rpx;
  min-height: 100vh;
  background-color: #f7f7f7;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.input-section {
  width: 100%;
  max-width: 600rpx;
  margin-top: 0;
  margin-bottom: 40rpx;
}

.text-input {
  width: 100%;
  height: 88rpx;
  border: 1px solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  font-size: 32rpx;
}

.btn-wrapper {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #07c160;
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-top: 60rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.image-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 10rpx;
}

.image-subtitle {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 20rpx;
}

.image-section {
  width: 100%;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
}

.generated-image {
  width: 100%;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
}
