<view class="container">
  <view class="input-section">
    <input 
      class="text-input" 
      placeholder="请输入文字描述" 
      bindinput="handleInput"
      value="{{inputText}}"
    />
    <button 
      class="submit-btn" 
      bindtap="handleSubmit"
      loading="{{isLoading}}"
    >生成图片</button>
  </view>
  
  <view class="image-section" wx:if="{{imageUrl}}">
    <image class="generated-image" src="{{imageUrl}}" mode="widthFix"></image>
  </view>
</view> 